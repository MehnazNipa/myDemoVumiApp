<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/background_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp">


        <TextView
            android:id="@+id/caseNO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Case no."
            android:textSize="17sp"
            android:textColor="@color/colorCozList"
            android:textStyle="bold"/>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/location2"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:textSize="15sp"
            android:text="Location"
            android:textColor="#ABB2B9"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/caseDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="case date"
            android:textSize="15dp"
            android:textColor="#000"
            android:paddingRight="5dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:background="#99A3A4"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/hearingDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="case hearing date"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginLeft="5dp"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/courtName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="court name"
            android:textSize="15dp"
            android:textColor="#000"
            android:paddingRight="5dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:background="#99A3A4"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/branchNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="branch no."
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginLeft="5dp"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/caseType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="case type"
            android:textSize="15dp"
            android:textColor="#000"
            android:paddingRight="5dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:background="#99A3A4"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/caseClass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="case class"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/caseStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="case status"
        android:textSize="15dp"
        android:textColor="#808080"
        android:gravity="center"/>

</LinearLayout>
